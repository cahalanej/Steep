<h1>Listing teas</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Region</th>
    <th>Teatype</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teas.each do |tea| %>
  <tr>
    <td><%= tea.name %></td>
    <td><%= tea.region %></td>
    <td><%= link_to tea.teaType.name, tea.teaType %></td>
    <td><%= button_to 'Like', tea_likes_path(tea), method: :post%></td>
  	<td><%= tea.likes.count %> Users like this tea</td>

  </tr>
<% end %>
</table>

